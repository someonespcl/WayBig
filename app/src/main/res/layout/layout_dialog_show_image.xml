<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@android:color/transparent"
     tools:context=".preferences.DialogShowImage">

    <com.github.mmin18.widget.RealtimeBlurView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         app:realtimeBlurRadius="12dp"
         app:realtimeOverlayColor="@android:color/transparent"
         android:id="@+id/blurBg" />

    <com.waybig.preferences.CircularImageView
         android:layout_height="200dp"
         android:layout_width="200dp"
         android:layout_centerInParent="true"
         android:background="@android:color/transparent"
         android:id="@+id/showImageDialog" />

</RelativeLayout>