<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:paddingEnd="25dp"
     android:orientation="vertical"
     android:paddingBottom="20dp"
     android:paddingStart="25dp"
     android:paddingTop="20dp"
     tools:context=".activities.ProfileSettingsActivity">

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:includeFontPadding="false"
         android:fontFamily="@font/poppins_semibold"
         android:textSize="20sp"
         android:textColor="@android:color/white"
         android:text="Edit Profile"
         android:layout_gravity="center" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="32dp"
         android:layout_gravity="center">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
             android:layout_height="180dp"
             android:layout_width="180dp">

            <com.waybig.preferences.CircularImageView
                 android:layout_height="168dp"
                 android:layout_width="168dp"
                 android:src="@drawable/nobita"
                 android:adjustViewBounds="true"
                 android:scaleType="centerCrop"
                 android:id="@+id/editImage" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/camera_outline"
                 android:adjustViewBounds="true"
                 android:layout_marginEnd="8dp"
                 android:background="@drawable/btn_bg"
                 android:padding="5dp"
                 app:layout_anchorGravity="bottom|center"
                 android:tint="@android:color/black"
                 app:layout_anchor="@id/editImage"
                 android:id="@+id/editImageBtn" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:includeFontPadding="false"
             android:fontFamily="@font/poppins_regular"
             android:textColor="@android:color/white"
             android:layout_marginTop="8dp"
             android:text="Choose Profile Picture"
             android:layout_gravity="center" />

    </LinearLayout>

    <ScrollView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:scrollbars="none"
         android:clipToPadding="false"
         android:layout_marginTop="8dp"
         android:overScrollMode="never">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="start"
             android:orientation="vertical"
             android:layout_marginTop="20dp">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:textSize="20sp"
                 android:textColor="@android:color/white"
                 android:text="@string/personal_info" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="16dp"
                 android:text="Name" />

            <EditText
                 android:layout_height="50dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/light_round_btn"
                 android:hint="madhav poola"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="5dp"
                 android:paddingHorizontal="10dp"
                 android:inputType="textPersonName"
                 android:id="@+id/editProfileName" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="10dp"
                 android:text="Phone Number" />

            <EditText
                 android:layout_height="50dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/light_round_btn"
                 android:hint="8886030703"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="5dp"
                 android:paddingHorizontal="10dp"
                 android:inputType="phone"
                 android:id="@+id/editPhnNum" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:textSize="20sp"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="20dp"
                 android:text="@string/user_info" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="16dp"
                 android:text="User Id :\t xhyDhufsbgu85ijbAdes42dgimdFi7g" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="10dp"
                 android:text="User E-Mail :\t madhavpoola4@gmail.com" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="10dp"
                 android:text="Gender :\t Male" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_semibold"
                 android:layout_marginTop="10dp"
                 android:text="Date Of Birth :\t 11/10/2004" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>